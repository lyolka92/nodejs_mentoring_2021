{
  "compilerOptions": {
	"module": "commonjs",
	"esModuleInterop": true,
	"target": "es2019",
	"moduleResolution": "node",
	"sourceMap": true,
	"strict": true,
	"noImplicitAny": true,
	"outDir": "./dist",
	"experimentalDecorators": true,
	"emitDecoratorMetadata": true,
	"skipLibCheck": true,
	"forceConsistentCasingInFileNames": true,
	"typeRoots": [
	  "./node_modules/@types"
	]
  },
  "lib": ["es2015"]
}